<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="6">
                <MudTextField @bind-Value="stock.sKodu" Label="Stok Kodu" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField @bind-Value="stock.sAciklama" Label="Stok Adı" />
            </MudItem>
            @if (colorOpen == "1")
            {
                <MudItem xs="6">
                    <MudTextField @bind-Value="stock.sRenkAdi" Label="Renk" />
                </MudItem>
            }
            @if (sizeOpen == "1")
            {
                <MudItem xs="6">
                    <MudTextField @bind-Value="stock.sBeden" Label="Beden" />
                </MudItem>
            }
            <MudItem xs="12">
                <MudSelect @bind-Value="stock.sDepo" Label="Depo">
                    @foreach (var dp in depoList)
                    {
                        <MudSelectItem Value="@dp.sDepo">@dp.sAciklama</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            @*<MudItem xs="12">
                <MudSelect @bind-Value="stock.sFiyatTipi" Label="Fiyat Tipi">
                    @foreach (var ft in fiyatTipi)
                    {
                        <MudSelectItem Value="@ft.sFiyatTipi">@ft.sAciklama</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>*@
            <MudCheckBox @bind-Value="stock.getAll" Label="Mevcutta Olmayanları Getir" Color="Color.Primary"></MudCheckBox>
        </MudGrid>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Close">Filtrele</MudButton>
        <MudButton Color="Color.Primary" OnClick="Cancel">İptal</MudButton>
    </DialogActions>
</MudDialog>


@code {
    private static string colorOpen = CommonParameters.colorOpen;
    private static string sizeOpen = CommonParameters.sizeOpen;

    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public Stock stock { get; set; } = new Stock();

    [Parameter]
    public List<TbFiyatTipi> fiyatTipi { get; set; } = new List<TbFiyatTipi>();

    [Parameter]
    public List<TbDepo> depoList { get; set; } = new List<TbDepo>();

    private void Close() => MudDialog.Close(DialogResult.Ok(stock));

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private Dictionary<string, string> _operators = new Dictionary<string, string>
{
        { "=", "Eşittir" },
        { ">", "Büyüktür" },
        { "<", "Küçüktür" },
        { ">=", "Büyük Eşittir" },
        { "<=", "Küçük Eşittir" }
    };
}

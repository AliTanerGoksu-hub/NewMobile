<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="6">
                <MudTextField @bind-Value="stock.sOzelNot" Label="Özel Not" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField @bind-Value="stock.sKodu" Label="Stok Kodu" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField @bind-Value="stock.sAciklama" Label="Stok Adı" />
            </MudItem>

            <MudItem xs="6">
                <MudTextField @bind-Value="stock.sKisaAdi" Label="Kısa Adı" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField @bind-Value="stock.sRenkAdi" Label="Renk" />
            </MudItem>
            <MudItem xs="6">
                <MudTextField @bind-Value="stock.sBeden" Label="Beden" />
            </MudItem>

            <MudItem xs="12">
                <MudSelect @bind-Value="stock.sDepo" Label="Depo">
                    @foreach (var opt in depoList)
                    {
                        <MudSelectItem Value="@opt.sDepo">@opt.sAciklama</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="6">
                <MudSelect @bind-Value="stock.opt" Label="Operatör">
                    @foreach (var opt in _operators)
                    {
                        <MudSelectItem Value="@opt.Key">@opt.Value</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>
            <MudItem xs="6">
                <MudTextField @bind-Value="stock.lMevcut" Label="Mevcut" />
            </MudItem>
        </MudGrid>
    </DialogContent>

    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Close">Filtrele</MudButton>
        <MudButton Color="Color.Primary" OnClick="Cancel">İptal</MudButton>
    </DialogActions>
</MudDialog>


@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public Stock stock { get; set; } = new Stock();

    [Parameter]
    public List<TbFiyatTipi> fiyatTipi { get; set; } = new List<TbFiyatTipi>();

    [Parameter]
    public List<TbDepo> depoList { get; set; } = new List<TbDepo>();

    private void Close() => MudDialog.Close(DialogResult.Ok(stock));

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    private Dictionary<string, string> _operators = new Dictionary<string, string>
{
        { "=", "Eşittir" },
        { ">", "Büyüktür" },
        { "<", "Küçüktür" },
        { ">=", "Büyük Eşittir" },
        { "<=", "Küçük Eşittir" }
    };
}
